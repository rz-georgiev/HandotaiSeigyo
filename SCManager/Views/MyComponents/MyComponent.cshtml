@model SCManager.InputModels.MyComponentInputModel

@{
    ViewData["Title"] = "Index";
}

@foreach (var type in Model.ComponentTypes)
{
    var symbol = type.Details.SingleOrDefault(x => x.IsPrimary)?.Symbol;
    <input type="hidden" id="hiddenSymbol_@type.Id" name="hiddenSymbol_@type.Id" value=@symbol>
}

<form id="profile-form" class="user" method="post">

    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="ComponentTypeId"></label>
        <select id="componentTypes" onchange="setMainUnit()" class="custom-select" asp-for="ComponentTypeId" asp-items="@(new SelectList(Model.ComponentTypes, "Id", "Name"))"></select>
        <span asp-validation-for="ComponentTypeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control form-control-user" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UnitPrice"></label>
        <input asp-for="UnitPrice" class="form-control form-control-user" />
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Value" id="Value"></label>
        <input asp-for="Value" class="form-control form-control-user" />
        <span asp-validation-for="Value" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UnitMultiplierId" id="UnitMultiplierId"></label>
        <select class="custom-select" asp-for="UnitMultiplierId" asp-items="@(new SelectList(Model.UnitMultipliers, "Id", "Name"))"></select>
        <span asp-validation-for="UnitMultiplierId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary btn-user btn-block">
        Save
    </button>
</form>

<script src="~/vendor/jquery/jquery.min.js"></script>
<script>

    $(document).ready(function () {
        setMainUnit();
    });

    function setMainUnit() {

        var select = document.getElementById("componentTypes");
        var componentTypeId = select.options[select.selectedIndex].value;

        var symbol = $("#hiddenSymbol_" + componentTypeId).val();
        var formattedSymbol = symbol == "" ? "" : "[" + symbol + "]";

        $("#Value").html("Value: " + formattedSymbol);
        $("#UnitMultiplierId").html("Unit multiplier: " + formattedSymbol);
    }
</script>