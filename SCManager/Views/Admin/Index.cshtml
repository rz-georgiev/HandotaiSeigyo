@model SCManager.ViewModels.Admin.IndexViewModel

@{
    ViewData["Title"] = "Admin panel";
}

<div class="accordion" id="accordionExample">

    @* POSTS EDITOR PANEL *@
    <div class="card">
        <div class="card-header" id="headingOne">
            <h2 class="mb-0">
                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Users
                </button>
            </h2>
        </div>
        <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
            @*<a class="nav-link" asp-area="" asp-controller="Admin" asp-action="PostEditor">Create new post</a>*@

            <div class="card shadow mb-4">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>Role</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Username</th>
                                    <th>Role</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var item in Model.Users)
                                {
                                    <tr>
                                        <td>@item.UserName</td>
                                        <td>
                                            @{
                                                if (item.IsAdmin)
                                                {
                                                    <a href="#" onclick="setUserRole(@item.Id, 'Admin')">Set as User</a>
                                                }
                                                else
                                                {
                                                    <a href="#" onclick="setUserRole(@item.Id, 'User')">Set as Admin</a>
                                                }
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        function setUserRole(userId, role) {
            $.ajax({
                type: 'POST',
                url: '/Admin/SetUserRole',
                data: { "userId": userId, "role": role },
                dataType: 'json',
                success: function (result) {
                    if (result) {

                    }
                    else {

                    }
                },
                beforeSend: function () {
                },
                complete: function () {
                },
                error: function () {
                }
            });
        }
    </script>
}