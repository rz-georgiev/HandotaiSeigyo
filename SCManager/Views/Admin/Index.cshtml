@model SCManager.ViewModels.Admin.AdminTotalViewModel

@{
    ViewData["Title"] = "Admin panel";
}

<div class="accordion" id="accordionExample">

    @* POSTS EDITOR PANEL *@
    <div class="card">
        <div class="card-header" id="headingOne">
            <h2 class="mb-0">
                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Users
                </button>
            </h2>
        </div>
        <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
            @*<a class="nav-link" asp-area="" asp-controller="Admin" asp-action="PostEditor">Create new post</a>*@

            <div class="card shadow mb-4">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Username</th>
                                    <th>Member since</th>
                                    <th>Ban</th>
                                    <th>Role</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Username</th>
                                    <th>Member since</th>
                                    <th>Ban</th>
                                    <th>Role</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var item in Model.Users)
                                {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.UserName</td>
                                    <td>@item.CreatedDateTime</td>
                                    <td>
                                        @{
                                            if (item.IsBanned)
                                            {
                                                <a asp-area="" asp-controller="Admin" asp-action="UnbanUser" asp-route-id=@item.Id>Unban</a>
                                            }
                                            else
                                            {
                                                <a asp-area="" asp-controller="Admin" asp-action="BanUser" asp-route-id=@item.Id>Ban</a>
                                            }
                                        }
                                    </td>
                                    <td>
                                        @{
                                            if (item.IsBanned)
                                            {
                                                <a asp-area="" asp-controller="Admin" asp-action="UnbanUser" asp-route-id=@item.Id>Unban</a>
                                            }
                                            else
                                            {
                                                <a asp-area="" asp-controller="Admin" asp-action="BanUser" asp-route-id=@item.Id>Ban</a>
                                            }
                                        }
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

