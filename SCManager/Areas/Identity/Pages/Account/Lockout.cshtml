@page
@model LockoutModel
@{
    ViewData["Title"] = "Locked out";
}

<body class="bg-gradient-primary">
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-locked-out-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-2">Locked out</h1>
                                        <p class="mb-4">This account has been locked out, please try again later.</p>
                                        <br/>
                                    </div>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" asp-page="./Login">Return to login page</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
