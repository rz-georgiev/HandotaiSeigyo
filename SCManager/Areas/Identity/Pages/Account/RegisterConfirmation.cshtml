@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-xl-5">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-confirm-email-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <form class="user">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Successfully created account!</h1>
                                    <h1 class="h4 text-gray-900 mb-4">Please check your email for a confirmation link!</h1>
                                </div>
                                <hr>
                                <div class="text-center">
                                    <a class="small btn btn-primary btn-user btn-block" asp-page="./Login">Go to login screen</a>
                                </div>
                            </form>
                            <hr>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>