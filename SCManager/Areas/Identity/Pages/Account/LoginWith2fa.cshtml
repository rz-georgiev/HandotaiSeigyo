@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Two-factor authentication";
}

<body class="bg-gradient-primary">
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">
                                            Authentication code
                                        </h1>
                                        <p class="mb-4">
                                            Your login is protected with an authenticator app. Enter your authenticator code below.
                                        </p>
                                    </div>
                                    <form class="user" method="post" asp-route-returnUrl="@Model.ReturnUrl">
                                        <input asp-for="RememberMe" type="hidden" />
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        <div class="form-group">
                                            <input asp-for="Input.TwoFactorCode" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="2FA code..." autocomplete="off">
                                            <span asp-validation-for="Input.TwoFactorCode" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input asp-for="Input.RememberMachine" class="custom-control-input" id="customCheck">
                                                <label asp-for="Input.RememberMachine" class="custom-control-label" for="customCheck">Remember machine</label>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary btn-user btn-block">Log in</button>
                                        </div>
                                        <div class="form-group">
                                            <div class="text-center">
                                                Don't have access to your authenticator device? You can
                                                <a class="small" id="recovery-code-login" asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl">log in with a recovery code</a>.
                                            </div>
                                        </div>
                                        <hr>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}